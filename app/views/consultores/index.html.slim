- model_class = Consultore
div class="page-header"
  h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
table class="table table-striped"
  thead
    tr
      th= model_class.human_attribute_name(:id)
      th= model_class.human_attribute_name(:nome)
      th= model_class.human_attribute_name(:created_at)
      th=t '.actions', :default => t("helpers.actions")
  tbody
    - @consultores.each do |consultore|
      tr
        td= link_to consultore.id, consultore_path(consultore)
        td= consultore.nome
        td=l consultore.created_at
        td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_consultore_path(consultore), :class => 'btn btn-mini'
          '
          = link_to t('.destroy', :default => t("helpers.links.destroy")), consultore_path(consultore), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_consultore_path, :class => 'btn btn-primary'

